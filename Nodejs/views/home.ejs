<%- include('partials/header') %>

<div class="container-fluid table-responsive bg-white text-dark" id="mainContent">
  <div class="row">

    <!--TODO id and for attributes will need to be changed-->
    <div class="col-sm-1 border">
      <h4>Filter</h4>
      <div class="btn-group">
        <button type="button" class="btn btn-info dropdown-toggle m-1" data-toggle="dropdown">
          Genre
        </button>
        <div class="dropdown-menu p-3">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
            <label class="form-check-label" for="defaultCheck1">
              Action
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="defaultCheck2">
            <label class="form-check-label" for="defaultCheck2">
              Adventure
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="defaultCheck2">
            <label class="form-check-label" for="defaultCheck2">
              Sci-Fi
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="defaultCheck2">
            <label class="form-check-label" for="defaultCheck2">
              Thriller
            </label>
          </div>
        </div>      <!--End of Genre dropdown-menu-->
      </div>     <!--End of Genre btn-group-->
      <div class="btn-group">
        <button type="button" class="btn btn-info dropdown-toggle m-1" data-toggle="dropdown">
          Rating
        </button>
        <div class="dropdown-menu p-3">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
            <label class="form-check-label" for="defaultCheck1">
              1.0 - 3.0
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
            <label class="form-check-label" for="defaultCheck1">
              3.1 - 5.0
            </label>
          </div>
        </div>
        </div> <!-- End of Rating btn-group-->
        
        <p class="font-weight-bold pt-4">Availability</p>

        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <div class="custom-control custom-checkbox">
              <input type="checkbox" class="custom-control-input" id=MonCheck>
              <label class="custom-control-label" for=MonCheck>Monday</label>
            </div>
          </li>
          <li class="list-group-item">
            <div class="custom-control custom-checkbox">
              <input type="checkbox" class="custom-control-input" id=TuesCheck>
              <label class="custom-control-label" for=TuesCheck>Tuesday</label>
            </div>
          </li>
          <li class="list-group-item">
            <div class="custom-control custom-checkbox">
              <input type="checkbox" class="custom-control-input" id=WedsCheck>
              <label class="custom-control-label" for=WedsCheck>Wednesday</label>
            </div>
          </li>
          <li class="list-group-item">
            <div class="custom-control custom-checkbox">
              <input type="checkbox" class="custom-control-input" id=ThursCheck>
              <label class="custom-control-label" for=ThursCheck>Thursday</label>
            </div>
          </li>
        </ul>
        <!-- <div class="filter-box">
          <ul class="filter-box-list">
            <li>
              <div class=filter-box-label>
                <label class="form-checkbox">
                  <input type="checkbox">
                  <span class="form-checkbox-title">
                    something
                  </span>
                </label>
              </div>
            </li>
          </ul>
        </div> -->


      </div> <!--End of filter menus column-->


      <div class="col-sm-10">
        <table class="table table-striped">
          <!--table-hover -->
          <thead>
            <tr>
              <th></th> <!-- The column name above the 'Recommend' button is left blank -->
              <% headers.forEach(function(col) { %>
              <th>
                <%= col %>
              </th>
              <% }); %>
            </tr>
          </thead>

          <tbody>
            <% moviesList.forEach(function(entry) { %>
            <form class="" action="/recommendation/<%= entry['Title'] %>" method="get">
              <tr class='clickable-row' data-href="/recommendation/<%= entry['Title'] %>">
                <td><button type="submit" name="movieTitle" value="<%= entry["Title"] %>"
                    class="btn btn-secondary">Recommend</button></td>
                <% headers.forEach(function(key) { %>
                <td>
                  <%= entry[key] %>
                </td>
                <% }); %>
              </tr>
            </form>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>



  <%- include('partials/footer') %>