<%- include('partials/header') %>

<div class="container mt-5">

  <h2>Insert Movie Record</h2><br><br>

  <form class="" action="/insert/movies" method="post">
    
    <div class="form-group">
      <label for="Rank">Rank</label>
      <input type="text" id="Rank" name="Rank" class="form-control" required>
    </div>

    <div class="form-group">
      <label for="Title">Title</label>
      <input type="text" id="Title" name="Title" class="form-control" required>
    </div>

    <div class="form-group">
      <label for="Genre">Genre</label>
      <input type="text" id="Genre" name="Genre" class="form-control" required>
    </div>

    <div class="form-group">
      <label for="Description">Description</label>
      <input type="text" id="Description" name="Description" class="form-control" required>
    </div>

    <div class="form-group">
      <label for="Director">Director</label>
      <input type="text" id="Director" name="Director" class="form-control" required>
    </div>

    <div class="form-group">
      <label for="Actors">Actors</label>
      <input type="text" id="Actors" name="Actors" class="form-control" required>
    </div><br>

    <div class="form-group">
      <label for="Year">Year</label>
      <input type="number" id="Year" name="Year" class="form-control" required>
    </div><br>

    <div class="form-group">
      <label for="Runtime">Runtime (Minutes)</label>
      <input type="number" id="Runtime" name="Runtime" class="form-control" required>
    </div><br>

    <div class="form-group">
      <label for="Rating">Rating</label>
      <input type="number" id="Rating" name="Rating" class="form-control" required>
    </div><br>

    <div class="form-group">
      <label for="Votes">Votes</label>
      <input type="number" id="Votes" name="Votes" class="form-control" required>
    </div><br>

    <div class="form-group">
      <label for="Revenue">Revenue (Millions)</label>
      <input type="number" id="Revenue" name="Revenue" class="form-control" required>
    </div><br>

    <div class="form-group">
      <label for="Metascore">Metascore</label>
      <input type="number" id="Metascore" name="Metascore" class="form-control" required>
    </div><br>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

  <br><br><br>
</div>

<%- include('partials/footer') %>