<body class="p-3 bg-dark text-white">

  <header class="navbar">
    <img class ="p-3" src="/images/logo-white-40.png">
    <form class="p-3 form-inline mr-auto">       
      <input class="form-control" id="searchbar" onkeyup="filterSearch()" type="text"
       placeholder="Search for names ...">
       <i class="fas fa-search ml-3" aria-hidden="true"></i>
      <!-- <button class ="btn btn-secondary btn-rounded btn-sm my-0 ml-sm-2" type="submit">Search</button> -->
    </form>
  </header>

  <div class="container-fluid p-3 mb-2">
    <div class="dropright">

        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          DataSet
        </button>

        <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
          <h4 class="dropdown-header">Display</h4>
          <form class="" action="/dataset/movies" method="get">
            <button class="dropdown-item" type="submit" value="" class="btn btn-secondary">Movies</button>
          </form>
          <form class="" action="/dataset/caregivers" method="get">
            <button class="dropdown-item" type="submit" value="" class="btn btn-secondary">Caregivers</button>
          </form>
          <div class="dropdown-divider"></div>
          <h4 class="dropdown-header">Insert</h4>
          <form class="" action="/insert/movies" method="get">
            <button class="dropdown-item" type="submit" value="" class="btn btn-secondary">Movies</button>
          </form>
          <form class="" action="/insert/caregivers" method="get">
            <button class="dropdown-item" type="submit" value="" class="btn btn-secondary">Caregivers</button>
          </form>
          <div class="dropdown-divider"></div>
          <h4 class="dropdown-header">Reload</h4>
          <form class="" action="/reload/movies" method="get">
            <button class="dropdown-item" type="submit" value="" class="btn btn-secondary">Movies</button>
          </form>
          <form class="" action="/reload/caregivers" method="get">
            <button class="dropdown-item" type="submit" value="" class="btn btn-secondary">Caregivers</button>
          </form>
        </div>

      </div>
